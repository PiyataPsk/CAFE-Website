<%-include('header.ejs')%>
<body>
    <%-include('navbar-admin.ejs')  %>
    <div class="container  d-flex justify-content-center ">
        <div style="width: 100%;">
            <form action="/delete/products" method="post">
                <label >Product ID</label><br>
                <input type="text" name="id"><br>
                <input type="submit" value="delete">
            </form>
            <% Object.values(products).forEach(function(item){%>
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card h-100">
                        <a href="#"><img class="card-img-top" src="./image/<%=item.image%>" alt="img"></a>
                        <div class="card-body">
                            <h4 class="card-title">
                            <h5>Product ID <%=item._id%></h5>
                            <a href="#"><%=item.name%></a>
                            </h4>
                            <h5>price <%=item.price%> Bath</h5>
                            <p class="card-text">sweet <%=item.sweet%></p>
                        </div>    
                    </div> 
                </div>
            <%})%>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
</body>
</html>